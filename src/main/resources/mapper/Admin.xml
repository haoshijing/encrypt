<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hulian.encrypt.dao.AdminMapper">
    <sql id="all_columns">
        *
    </sql>
    <sql id = "tableName">
        t_admin
    </sql>
    <select id="selectByUsername" resultType="com.hulian.encrypt.po.AdminPo" parameterType="java.lang.String">
        <!-- 具体的sql -->
        SELECT <include refid="all_columns"/> FROM
        <include refid="tableName"/>
        WHERE userName = #{userName}
    </select>
    <update id="updatePwd">
        update t_admin set password = #{newPwd} where userName = #{userName}
    </update>
</mapper>